<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="post"
            type="com.herokuapp.data.entity.Post" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/size_10dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPost_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/size_10dp"
                android:singleLine="true"
                android:text="@{post.title}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPost_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/size_14sp"
                android:textStyle="bold"
                app:bindServerDate="@{post.date}" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivPost_item"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:background="@drawable/img"
                    android:contentDescription="@null"
                    app:avatarUrl="@{post.imageUrl}" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_50dp"
                    android:layout_toEndOf="@+id/ivPost_item">

                    <TextView
                        android:id="@+id/tvPost_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:singleLine="false"
                        android:text="@{post.body}"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/size_14sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>